{
  "name": "react-achievements",
  "version": "3.7.0",
  "description": "Core achievement system for React applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "test": "npm run type-check && jest",
    "test:unit": "jest",
    "type-check": "tsc --noEmit --project tsconfig.test.json",
    "type-check:watch": "tsc --noEmit --watch --project tsconfig.test.json",
    "type-check:src": "tsc --noEmit",
    "type-check:stories": "find stories -name '*.tsx' -o -name '*.ts' | xargs tsc --noEmit --jsx react --esModuleInterop --skipLibCheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "install-hooks": "sh scripts/install-hooks.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "ship": "gh workflow run release.yml"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-confetti": "^6.1.0",
    "react-dom": ">=16.8.0",
    "react-modal": "^3.16.1",
    "react-toastify": "^9.1.3",
    "react-use": "^17.4.0"
  },
  "peerDependenciesMeta": {
    "react-confetti": {
      "optional": true
    },
    "react-modal": {
      "optional": true
    },
    "react-toastify": {
      "optional": true
    },
    "react-use": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@eslint/js": "^9.39.2",
    "@reduxjs/toolkit": "^2.7.0",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-webpack5": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/react-modal": "^3.16.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^6.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-redux": "^9.2.0",
    "react-toastify": "^9.1.3",
    "react-use": "^17.4.0",
    "rollup": "^3.25.1",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^8.6.12",
